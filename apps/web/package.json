{
  "name": "@the-path/web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "playwright:install": "pnpm exec playwright install --with-deps",
    "pretest": "pnpm run playwright:install",
    "pretest:ci": "pnpm run playwright:install",
    "pretest:visual": "pnpm run playwright:install",
    "test": "vitest run && playwright test",
    "test:ci": "vitest run --coverage && playwright test --reporter=list",
    "test:visual": "playwright test",
    "preview": "vite preview",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@the-path/types": "workspace:^",
    "@the-path/utils": "workspace:^",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@playwright/test": "^1.50.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^2.1.8",
    "rimraf": "^6.0.1"
  }
}
